<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".wateringDetails"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="When did you last watered?"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"/>
    <TextView
        android:id="@+id/water1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Today"
        android:textSize="20dp"
        android:textStyle="bold"
        android:onClick="onTextViewClick"/>
    <TextView
        android:id="@+id/water2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Yesterday"
        android:textSize="20dp"
        android:textStyle="bold"
        android:onClick="onTextViewClick"/>
    <TextView
        android:id="@+id/water3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Day before yesterday"
        android:textSize="20dp"
        android:textStyle="bold"
        android:onClick="onTextViewClick"/>
    <TextView
        android:id="@+id/water4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Week before"
        android:textSize="20dp"
        android:textStyle="bold"
        android:onClick="onTextViewClick"/>

    <TextView
        android:id="@+id/water5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Two Weeks before"
        android:textSize="20dp"
        android:textStyle="bold"
        android:onClick="onTextViewClick"/>

    <TextView
        android:id="@+id/water6"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Month before or not sure"
        android:textSize="20dp"
        android:textStyle="bold"
        android:onClick="onTextViewClick"/>

</LinearLayout>